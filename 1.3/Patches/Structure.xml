				<xpath>/Defs/ThingDef[defName = "Door"]/thingCategories</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Door"]</xpath>
				<value>
					<thingCategories>
						<li>BuildingsMisc</li>
					</thingCategories>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationTest">
				<xpath>/Defs/ThingDef[defName = "Door"]/statBases/Mass</xpath>
				<success>Invert</success>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "Door"]/statBases</xpath>
				<value>
					<Mass>10</Mass>
				</value>
			</li>
		</operations>
	</Operation>

