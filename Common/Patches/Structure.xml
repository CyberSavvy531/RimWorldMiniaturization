<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Defs\ThingDefs_Buildings\Buildings_Structure.xml -->

	<!-- Door -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Door"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Door"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsMisc</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]/thingCategories</xpath>
			<value>
				<li>BuildingsMisc</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Door"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]/statBases</xpath>
			<value>
				<Mass>5</Mass>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Door"]/stealable</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]</xpath>
			<value>
				<stealable>false</stealable>
			</value>
		</nomatch>
	</Operation>

	<!-- Autodoor -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Autodoor"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Autodoor"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsMisc</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]/thingCategories</xpath>
			<value>
				<li>BuildingsMisc</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Autodoor"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]/statBases</xpath>
			<value>
				<Mass>10</Mass>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Autodoor"]/stealable</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]</xpath>
			<value>
				<stealable>false</stealable>
			</value>
		</nomatch>
	</Operation>

</Patch>