<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Defs\ThingDefs_Buildings\Buildings_Structure.xml -->

	<!-- DoorBase -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name = "DoorBase"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name = "DoorBase"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name = "DoorBase"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name = "DoorBase"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsMisc</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name = "DoorBase"]/thingCategories</xpath>
			<value>
				<li>BuildingsMisc</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[@Name = "DoorBase"]/stealable</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name = "DoorBase"]</xpath>
			<value>
				<stealable>false</stealable>
			</value>
		</nomatch>
	</Operation>

	<!-- Door -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Door"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Door"]/statBases</xpath>
			<value>
				<Mass>5</Mass>
			</value>
		</nomatch>
	</Operation>

	<!-- Autodoor -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "Autodoor"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "Autodoor"]/statBases</xpath>
			<value>
				<Mass>10</Mass>
			</value>
		</nomatch>
	</Operation>

	<!-- FenceGate -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "FenceGate"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "FenceGate"]/statBases</xpath>
			<value>
				<Mass>2</Mass>
			</value>
		</nomatch>
	</Operation>

	<!-- AnimalFlap -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "AnimalFlap"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "AnimalFlap"]/statBases</xpath>
			<value>
				<Mass>2</Mass>
			</value>
		</nomatch>
	</Operation>

	<!-- OrnateDoor -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "OrnateDoor"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "OrnateDoor"]/statBases</xpath>
			<value>
				<Mass>10</Mass>
			</value>
		</nomatch>
	</Operation>

</Patch>