	<!-- BiofuelRefinery -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
		<match Class="PatchOperationReplace">
			<!-- For some reason, some production buildings have an empty <minifiedDef/> tag. This replaces that with the MinifiedThing value -->
