			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/statBases</xpath>
			<value>
				<Mass>40</Mass>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/stealable</xpath>
