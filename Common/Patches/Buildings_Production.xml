			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsProduction</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/thingCategories</xpath>
			<value>
				<li>BuildingsProduction</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/statBases/Mass</xpath>
