	<!-- Defs\ThingDefs_Buildings\Buildings_Production.xml -->

	<!-- BiofuelRefinery -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
		<match Class="PatchOperationReplace">
			<!-- For some reason, some production buildings have an empty <minifiedDef/> tag. This replaces that with the MinifiedThing value -->
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/minifiedDef</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsProduction</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/thingCategories</xpath>
			<value>
				<li>BuildingsProduction</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "BiofuelRefinery"]/statBases</xpath>
			<value>
				<Mass>20</Mass>
			</value>
		</nomatch>
	</Operation>

