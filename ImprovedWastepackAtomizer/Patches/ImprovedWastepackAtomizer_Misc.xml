	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "LargeWastepackAtomizer"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "LargeWastepackAtomizer"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsMisc</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "LargeWastepackAtomizer"]/thingCategories</xpath>
			<value>
				<li>BuildingsMisc</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "LargeWastepackAtomizer"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "LargeWastepackAtomizer"]/statBases</xpath>
			<value>
				<Mass>70</Mass>
			</value>
		</nomatch>
