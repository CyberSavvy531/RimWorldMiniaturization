<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<!-- Defs\ThingDefs\Buildings_Misc.xml -->

	<!-- Small Wastepack Atomizer -->

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/minifiedDef</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]</xpath>
			<value>
				<minifiedDef>MinifiedThing</minifiedDef>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/thingCategories</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]</xpath>
			<value>
				<thingCategories>
					<li>BuildingsMisc</li>
				</thingCategories>
			</value>
		</nomatch>
		<match Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/thingCategories</xpath>
			<value>
				<li>BuildingsMisc</li>
			</value>
		</match>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/statBases/Mass</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/statBases</xpath>
			<value>
				<Mass>30</Mass>
			</value>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]/stealable</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName = "SmallWastepackAtomizer"]</xpath>
			<value>
				<stealable>false</stealable>
			</value>
		</nomatch>
	</Operation>

	<!-- Large Wastepack Atomizer -->

